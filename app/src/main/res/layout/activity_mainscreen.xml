<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp">

    <TextView
        android:id="@+id/mainscreen_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Headers"
        android:text="Hello, + name"
        android:gravity="center"/>
    <Spinner
        android:id="@+id/mainscreen_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="7dp"
        android:textAlignment="center"
        android:layout_below="@id/mainscreen_header" />

    <ExpandableListView
        android:id="@+id/mainscreen_listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="7dp"
        android:layout_below="@id/mainscreen_spinner">

    </ExpandableListView>
    <RelativeLayout
        android:id="@+id/mainScreen_loadingPanel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center" >

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true" />
    </RelativeLayout>

</RelativeLayout>