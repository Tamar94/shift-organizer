<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp">

    <ImageView
        android:id="@+id/homeIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/home_icon"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        style="@style/Headers"
        android:id="@+id/contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Contact List"
        android:layout_alignParentTop="true" />
    <Spinner
        android:id="@+id/contact_spinner"
        android:layout_below="@id/contact"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:visibility="visible"
        android:id="@+id/contact_all"
        android:layout_marginTop="20dp"
        android:layout_below="@id/contact_spinner"
        android:layout_above="@id/homeIcon"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/firstLinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="First Name"
           style="@style/SubHeader"/>
        <TextView
            android:id="@+id/contactList_firstName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="the name"
            style="@style/Text"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/secondLinear"
        android:layout_below="@id/firstLinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Last Name"
            style="@style/SubHeader"/>
        <TextView
            android:id="@+id/contactList_lastName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="the name"
            style="@style/Text"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/therdLinear"
        android:layout_below="@id/secondLinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Phone Number"
            style="@style/SubHeader"/>
        <TextView
            android:id="@+id/contactList_phoneNumber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="the number"
            style="@style/Text"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fourthLinear"
        android:layout_below="@id/therdLinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ID"
            style="@style/SubHeader"/>
        <TextView
            android:id="@+id/contactList_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="the id number"
            style="@style/Text"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fifthLinear"
        android:layout_below="@id/fourthLinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Address"
            style="@style/SubHeader"/>
        <TextView
            android:id="@+id/contactList_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="the address"
            style="@style/Text"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/sixesthLinear"
        android:layout_below="@id/fifthLinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="BirthDay"
            style="@style/SubHeader"/>
        <TextView
            android:id="@+id/contactList_birthDay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="birthday date"
            style="@style/Text"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/seventhLinear"
        android:layout_below="@id/sixesthLinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Email"
            style="@style/SubHeader"/>
        <TextView
            android:id="@+id/contactList_email"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="email address"
            style="@style/Text"/>
    </LinearLayout>


    <ImageView
        android:id="@+id/addEmp_delete"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/garbage_icon"
        android:layout_marginTop="45sp"
       android:layout_centerHorizontal="true"
        android:layout_below="@id/seventhLinear"

        android:onClick="delete"/>
    </RelativeLayout>



</RelativeLayout>
